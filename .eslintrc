{
    "rules": {
        "no-require-imports": 0,
        "import/no-unresolved": [
            "error",
            {
                "caseSensitive": false
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    }
}